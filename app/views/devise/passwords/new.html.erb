<div class='all_area'>
 <div class='title'>
    <h2>PANN<span>A.</span>P</h2>
  </div>

  <div class='inner_block'>
    <div class='login_title'>
    <p>Forgot your password?</p>
   </div>

    <div class="waku">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "pass" %>
      </div>

      <div class="actions">
        <%= f.submit "send reset pass", class: "pass" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  </div>
</div>

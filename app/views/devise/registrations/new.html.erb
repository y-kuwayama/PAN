<div class='all_area'>

  <div class='title'>
    <h2>PANN<span>A.</span>P</h2>
  </div>

  <div class='inner_block'>
    <div class='login_title'>
    <p>Signup</p>
   </div>


  <div class="waku">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "pass" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> char minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "pass" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "pass" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>